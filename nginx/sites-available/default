# SERVIDOR: eltiempo.lopeztola.com
# PROTOCOLO: HTTP
# PUERTO: 80
server {
       listen 80; 
       listen [::]:80;

       server_name eltiempo.lopeztola.com;

       access_log /var/log/nginx/eltiempo.log;

       root /var/www/example.com; index index.html;

        location / {
                proxy_pass http://10.68.1.100:8000;
        }
}


